{
  "manifest_version": 3,
  "name": "SecurePass",
  "version": "1.0",
  "description": "Generate secure passwords, check their strength, and detect vulnerabilities.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icon.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}